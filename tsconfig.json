{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "nodenext",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "typeRoots": [ "../node_modules/@types"]
  },
  "ts-node": {
    "files": true,
    "require": ["tsconfig-paths/register"],
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "include": [
    "yamlSetEnv.ts"
  ]
}
